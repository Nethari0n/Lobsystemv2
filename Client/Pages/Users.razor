@code {
    #region Properties

    private List<User> UsersDTO { get; set; } = new();
    private List<User> UsersFull { get; set; } = new();
    // private List<Role> Roles { get; set; }



    private string xls = "xlsx";


    private string UserName { get; set; }
    private string OldUserName { get; set; }

